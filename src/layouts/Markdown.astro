---
import { Image } from "astro:assets";
import { Icon } from "astro-icon";
import Layout from "./Layout.astro";
const { frontmatter, id } = Astro.props;
const { title, img, time, yield: yieldInfo } = frontmatter;

// Resolve frontmatter `img` (e.g., "/src/imgs/filename.jpg") to an imported asset
const IMAGES = import.meta.glob("/src/imgs/*", { eager: true }) as Record<
  string,
  { default: any }
>;
const mod = IMAGES[img as string];
const imageSrc = mod?.default ?? img;

// Compute a stable View Transitions name from the content id so
// the list image and the hero image can morph across navigation
const idNoExt = (id as string).replace(/\.(md|mdx)$/i, "");
const safeId = idNoExt.replace(/[^a-z0-9_-]/gi, "-").toLowerCase();
const vtName = `recipe-image-${safeId}`;
---

<Layout title={title}>
  <main>
    <figure>
      <Image
        src={imageSrc}
        width={600}
        height={400}
        format="avif"
        loading="eager"
        style={`view-transition-name: ${vtName}`}
        alt=""
      />
      <div>
        {
          time && (
            <p>
              <Icon name="lucide:clock" width={18} />
              <span>{time} min.</span>
            </p>
          )
        }
        {
          yieldInfo && (
            <p>
              <Icon name="ic:outline-cookie" width={18} />
              <span>{yieldInfo}</span>
            </p>
          )
        }
      </div>
    </figure>
    <slot />
  </main>
</Layout>

<style>
  @layer components {
    figure {
      display: grid;
    }

    figure > * {
      grid-area: 1 / 1;
    }

    div {
      place-self: end stretch;
      display: flex;
      gap: var(--space-md);
      flex-wrap: wrap;
      padding: var(--space-xxxl) var(--space-md) var(--space-xs);
      background: linear-gradient(to top, hsl(0 0% 0% / 80%), #0000);
    }

    /* div {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    box-shadow: #3341551a 0 0 0 1px, #0000000d 0 20px 25px -5px;
    background: linear-gradient(#fff 0, #f3f4f6 100%) padding-box, #fff;
    padding: 1rem;
    border-radius: 8px;
  } */

    p {
      display: flex;
      gap: var(--space-xxs);
      align-items: center;
      margin: 0;
      font-weight: 600;
      color: #fff;
      font-size: var(--size-step--1);
    }
  }
</style>

<script>
  (function () {
    const heroImg = document.querySelector("figure img") as HTMLElement;
    if (!heroImg) return;

    const idNoExt = window.location.pathname
      .replace(/^\/opskrifter\//, "")
      .replace(/\/$/, "");
    const safeId = idNoExt.replace(/[^a-z0-9_-]/gi, "-").toLowerCase();
    const vtImageName = `recipe-image-${safeId}`;

    // Clean up the view-transition-name after the incoming transition completes
    window.addEventListener("pagereveal", (evt) => {
      if (!evt.viewTransition) return;

      // Wait for the transition to finish, then remove the style attribute
      evt.viewTransition.finished.then(() => {
        heroImg.removeAttribute("style");
      });
    });

    // Re-set the view-transition-name before navigating back (outgoing transition)
    window.addEventListener("pageswap", (evt) => {
      if (!evt.viewTransition) return;

      // Only set if we're navigating to the list page
      const targetUrl = new URL(
        evt.activation?.entry?.url || "",
        location.href
      );
      if (
        targetUrl.pathname === "/opskrifter/" ||
        targetUrl.pathname === "/opskrifter"
      ) {
        heroImg.style.setProperty("view-transition-name", vtImageName);
      }
    });
  })();
</script>
